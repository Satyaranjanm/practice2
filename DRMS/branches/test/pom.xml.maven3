        <developerConnection>${project.scm.connection}</developerConnection>

        <!-- RUNTIME ENVIRONMENT VARIABLES -->
        <!-- These are overridden by the values in settings.xml They are 
            here as backups in case settings.xml isn't setup correctly. -->
        <jbossJavaOpts>${env.JAVA_OPTS}</jbossJavaOpts>
        <pss2OpEmails>${env.PSS2_OP_EMAILS}</pss2OpEmails>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>central</id>
            <url>${nexusUrl}</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <!-- build with mvn -U if you want to update your snapshots 
                    also, M2Eclipse plugin offers Maven -> Update Dependencies menu -->
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </repository>
    </repositories>
    <distributionManagement>
        <!-- use the following if you're not using a snapshot version. -->
        <repository>
            <id>central</id>
            <name>Releases</name>
            <url>${nexusDistributionUrl}/releases/</url>
        </repository>
        <!-- use the following if you ARE using a snapshot version. -->
        <snapshotRepository>
            <id>central</id>
            <name>Snapshots</name>
            <url>${nexusDistributionUrl}/snapshots/</url>
        </snapshotRepository>
        <site>
            <id>drms-site</id>
            <name>DRMS</name>
            <url>site</url>
        </site>
    </distributionManagement>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <url>${nexusUrl}</url>
            <snapshots>
                <enabled>false</enabled>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

