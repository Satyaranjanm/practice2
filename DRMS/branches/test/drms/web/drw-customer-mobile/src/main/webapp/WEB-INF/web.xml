<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
   <display-name>m.drweb</display-name>

   <context-param>
      <param-name>javax.ws.rs.core.Application</param-name>
      <param-value>com.akuacom.pss2.drw.service.LibraryApplication</param-value>
   </context-param>

   <context-param>
      <param-name>resteasy.servlet.mapping.prefix</param-name>
      <param-value>/resteasy</param-value>
   </context-param>

   <listener>
      <listener-class>
         org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
      </listener-class>
   </listener>
   
   <listener>
	   <listener-class>com.akuacom.pss2.drw.cache.DrRunTimerListener</listener-class>
	</listener>

   <servlet>
      <servlet-name>Resteasy</servlet-name>
      <servlet-class>
         org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
      </servlet-class>
   </servlet>
	<servlet>
        <servlet-name>ExportServlet</servlet-name>
        <servlet-class>com.akuacom.pss2.drw.service.ExportServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RetrieveMapDataServlet</servlet-name>
        <servlet-class>com.akuacom.pss2.drw.service.RetriveMapData</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
	 <servlet>
        <servlet-name>RetriveMapData Servlet</servlet-name>
        <servlet-class>com.akuacom.pss2.drw.ajax.RetriveMapData</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
   <servlet-mapping>
      <servlet-name>Resteasy</servlet-name>
      <url-pattern>/resteasy/*</url-pattern>
   </servlet-mapping>
	<servlet-mapping>
        <servlet-name>ExportServlet</servlet-name>
        <url-pattern>*.export</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RetrieveMapDataServlet</servlet-name>
        <url-pattern>*.map</url-pattern>
    </servlet-mapping>
	 <servlet-mapping>
        <servlet-name>RetriveMapData Servlet</servlet-name>
        <url-pattern>*.ajax</url-pattern>
    </servlet-mapping>
</web-app>