<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

	<!--custom jsf tag with better accessibility support -->
	<component>
		<description>A tab section within a tab panel</description>
		<component-type>com.akuacom.jsf.Tab</component-type>
		<component-class>com.akuacom.jsf.component.HtmlTab</component-class>
		<component-extension>
			<component-family>com.akuacom.jsf.Tab</component-family>
			<renderer-type>com.akuacom.jsf.TabRenderer</renderer-type>
		</component-extension>
	</component>
	<component>
		<description>Command Link</description>
		<component-type>com.akuacom.jsf.CommandLink</component-type>
		<component-class>com.akuacom.jsf.component.HtmlCommandLink</component-class>
		<component-extension>
			<component-family>javax.faces.Command</component-family>
			<renderer-type>com.akuacom.jsf.CommandLinkRenderer</renderer-type>
		</component-extension>
	</component>

	<!-- Customer renderkit to improve accessibility to existing JSF components -->
	<render-kit>
		<renderer>
			<display-name>Cell Render</display-name>
			<component-family>org.richfaces.Column</component-family>
			<renderer-type>org.richfaces.renderkit.CellRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.CellRenderer</renderer-class>
		</renderer>
		<renderer>
			<display-name>Accessible CommandLink</display-name>
			<component-family>javax.faces.Command</component-family>
			<renderer-type>com.akuacom.jsf.CommandLinkRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.AccessibleCommandLinkRender</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.richfaces.Datascroller</component-family>
			<renderer-type>org.richfaces.DataScrollerRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.AccessibleDatascrollerRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.richfaces.DataTable</component-family>
			<renderer-type>org.richfaces.DataTableRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.AccessibleDataTableRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>com.akuacom.jsf.Tab</component-family>
			<renderer-type>com.akuacom.jsf.TabRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.AccessibleTabRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>javax.faces.Message</component-family>
			<renderer-type>javax.faces.Message</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.AccessibleMessageRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>javax.faces.Messages</component-family>
			<renderer-type>javax.faces.Messages</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.AccessibleMessagesRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>javax.faces.Form</component-family>
			<renderer-type>javax.faces.Form</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.AccessibleFormRenderer</renderer-class>
		</renderer>
	</render-kit>
	
	<managed-bean>
		<description>Operator Repoprt</description>
		<managed-bean-name>report</managed-bean-name>
		<managed-bean-class>com.akuacom.pss2.opt.report.OperatorReports</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
	  <description>Footer</description>
	  <managed-bean-name>footer</managed-bean-name>
	  <managed-bean-class>com.akuacom.pss2.opt.report.Footer</managed-bean-class>
	  <managed-bean-scope>request</managed-bean-scope>
	 </managed-bean>		
	 
	  <!-- Footer backing bean for logo, copyright etc  -->
 	<managed-bean>
	  <description>common configurations</description>
	  <managed-bean-name>pss2Config</managed-bean-name>
	  <managed-bean-class>com.akuacom.pss2.web.common.Config</managed-bean-class>
	  <managed-bean-scope>request</managed-bean-scope>
 	</managed-bean>
	 
	<navigation-rule>
	    <navigation-case>
		    <from-action>#{report.logoutAndCleanSession}</from-action>	   
		    <from-outcome>success</from-outcome>
		    <to-view-id>../pss2.website/logout.do</to-view-id>
		    <redirect/>
       </navigation-case>
	</navigation-rule>
	
</faces-config>