<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	

	<!--custom jsf tag with better accessibility support -->
	<component>
  		<description>A tab section within a tab panel</description>
        <component-type>com.akuacom.jsf.Tab</component-type>
    	<component-class>com.akuacom.jsf.component.HtmlTab</component-class>
	    <component-extension>
      		<component-family>com.akuacom.jsf.Tab</component-family>
      		<renderer-type>com.akuacom.jsf.TabRenderer</renderer-type>
    	</component-extension>
     </component>
	<component>
  		<description>Command Link</description>
        <component-type>com.akuacom.jsf.CommandLink</component-type>
    	<component-class>com.akuacom.jsf.component.HtmlCommandLink</component-class>
	    <component-extension>
      		<component-family>javax.faces.Command</component-family>
      		<renderer-type>com.akuacom.jsf.CommandLinkRenderer</renderer-type>
    	</component-extension>
     </component>
     <component>
  		<description>Output Link</description>
        <component-type>com.akuacom.jsf.OutputLink</component-type>
    	<component-class>com.akuacom.jsf.component.HtmlOutputLink</component-class>
	    <component-extension>
      		<component-family>com.akuacom.jsf.OutputLink</component-family>
      		<renderer-type>com.akuacom.jsf.OutputLinkRenderer</renderer-type>
    	</component-extension>
     </component>

	 <component>
  		<description>richface simpleTogglePanel</description>
        <component-type>com.akuacom.jsf.component.HtmlSimpleTogglePanel</component-type>
    	<component-class>com.akuacom.jsf.component.HtmlSimpleTogglePanel</component-class>
	    <component-extension>
      		<component-family>org.richfaces.SimpleTogglePanel</component-family>
      		<renderer-type>com.akuacom.jsf.renderkit.AccessibleSimpleToggleControlTemplate</renderer-type>
    	</component-extension>
     </component>
	 
  	<!--  this custom tag provides the ability for programmer to add a callback to retrieve data in the order of
  		 clicked column. the default DataTable provided by rich faces does provide functionality for row sorting 
  		 but that job is job in memory locally for all the rows in current page. However, sometimes user may 
  		 want all rows of data in all pages be reordered. Nothing changed in the tag definition but 
  		 the underlying data model 
    -->
  	<component>
  		<description>The &amp;lt;richext:dataTable&amp;gt; component for tables rendering that allows choosing data from a model and obtains built-in support of Ajax updates.</description>
        <component-type>com.akuacom.jsf.DataTable</component-type>
    	<component-class>com.akuacom.jsf.component.ExtendedHtmlDataTable</component-class>
    
		<facet>
  			<description>Defines the footer content</description>
          	<facet-name>footer</facet-name>
    	</facet>
		<facet>
  			<description>Defines the caption content</description>
          	<facet-name>caption</facet-name>
    	</facet>
		<facet>
  			<description>Defines the header content</description>
          	<facet-name>header</facet-name>
    	</facet>
	    <component-extension>
      		<component-family>com.akuacom.jsf.DataTable</component-family>
      		<renderer-type>com.akuacom.jsf.DataTableRenderer</renderer-type>
    	</component-extension>
      </component>
      
      	<component>
		<description>The &amp;lt;richext:treeTable&amp;gt; component for tree tables rendering that allows choosing data from a model and obtains built-in support of Ajax updates.</description>
		<component-type>com.akuacom.jsf.TreeTable</component-type>
		<component-class>com.akuacom.jsf.component.HtmlTreeTable</component-class>

		<facet>
			<description>Defines the footer content</description>
			<facet-name>footer</facet-name>
		</facet>
		<facet>
			<description>Defines the caption content</description>
			<facet-name>caption</facet-name>
		</facet>
		<facet>
			<description>Defines the header content</description>
			<facet-name>header</facet-name>
		</facet>
		<component-extension>
			<component-family>com.akuacom.jsf.TreeTable</component-family>
			<renderer-type>com.akuacom.jsf.TreeTableRenderer</renderer-type>
		</component-extension>
	</component>
	
	<component>
		<description>The &amp;lt;richext:treeColumn&amp;gt; component for tree column rendering that allows choosing data from a model and obtains built-in support of Ajax updates.</description>
		<component-type>com.akuacom.jsf.TreeColumn</component-type>
		<component-class>com.akuacom.jsf.component.HtmlTreeColumn</component-class>
		<facet>
  			<description>Defines the header content</description>
          	<facet-name>header</facet-name>
    	</facet>
		<facet>
  			<description>Defines the footer content</description>
          	<facet-name>footer</facet-name>
    	</facet>
		<component-extension>
			<component-family>com.akuacom.jsf.TreeColumn</component-family>
			<renderer-type>com.akuacom.jsf.TreeColumnRenderer</renderer-type>
		</component-extension>
	</component>
	
      <!-- customer renders  -->
	<render-kit>
		<renderer>
			<display-name>Cell Render</display-name>
			<component-family>org.richfaces.Column</component-family>
			<renderer-type>org.richfaces.renderkit.CellRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.CellRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>com.akuacom.jsf.DataTable</component-family>
			<renderer-type>com.akuacom.jsf.DataTableRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.ExtendedDataTableRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>com.akuacom.jsf.TreeTable</component-family>
			<renderer-type>com.akuacom.jsf.TreeTableRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.TreeTableRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>com.akuacom.jsf.TreeColumn</component-family>
			<renderer-type>com.akuacom.jsf.TreeColumnRenderer</renderer-type>
			<renderer-class>com.akuacom.jsf.renderkit.TreeColumnRenderer</renderer-class>
		</renderer>
	</render-kit>
	
  	<converter>
		<converter-id>HourMinuteConverter</converter-id>
		<converter-class>com.akuacom.jsf.converter.HourMinuteConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>subStringConverter</converter-id>
		<converter-class>com.akuacom.jsf.converter.SubStringConverter</converter-class>
		<property>
			<description>
				Defines the length
			</description>
			<property-name>length</property-name>
			<property-class>java.lang.Integer</property-class>
			<default-value>10</default-value>
		</property>
	</converter>
	
</faces-config>