<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.akuacom.drms.system</groupId>
        <artifactId>system-parent</artifactId>
        <version>7.26-SNAPSHOT</version>
    </parent>
    <groupId>com.akuacom.drms.ear</groupId>
    <artifactId>ear-parent</artifactId>
    <version>7.26-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>ear-parent</name>
    <description>A pom setup to manage both the ear and the project that runs system tests against it.  
	Consider this as the main pom and provide dependencies in here so both projects will compile properly.</description>
    <modules>
        <module>drms-ear</module>       
        <module>itron-ear</module>
        <module>pss2-destinations-service</module>
    </modules>
    <properties>
        <earName>pss2</earName>
        <jbossServerConfig>${jbossHome}/server/${drmsEnv}</jbossServerConfig>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.akuacom.common</groupId>
            <artifactId>util</artifactId>
        </dependency>
        <dependency>
            <groupId>com.akuacom.common</groupId>
            <artifactId>util-ejb</artifactId>
        </dependency>
        <dependency>
            <groupId>com.akuacom.drms.core</groupId>
            <artifactId>drms-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.akuacom.drms.lib</groupId>
            <artifactId>drms-util</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.akuacom.drms.lib</groupId>
            <artifactId>jsf-lib</artifactId>
        </dependency>
        <dependency>
            <groupId>com.akuacom.drms.report</groupId>
            <artifactId>report-ejb</artifactId>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.faces</groupId>
            <artifactId>jsf-api</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.faces</groupId>
            <artifactId>jsf-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.richfaces.framework</groupId>
            <artifactId>richfaces-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.richfaces.ui</groupId>
            <artifactId>richfaces-ui</artifactId>
        </dependency>
	
		<dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-jaxrs</artifactId>
		</dependency>
	
		<dependency>
			<groupId>org.jboss.resteasy</groupId>
			<artifactId>resteasy-jettison-provider</artifactId>
		</dependency>
    </dependencies>
    <profiles>
		<profile>
			<id>sce</id>
			<modules>
				<module>drpro</module>
		   </modules>
		    <dependencies>
				<dependency>
					<groupId>com.akuacom.drms.drw</groupId>
					<artifactId>drw-ejb</artifactId>
					<type>ejb</type>
				</dependency>
		    </dependencies>
		</profile>
        <profile>
            <id>configureAll</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <modules>
                <module>pss2-singleton-service</module>
            </modules>
        </profile>
    </profiles>
</project>
