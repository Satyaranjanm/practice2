<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.akuacom.drms.ear</groupId>
    <artifactId>itron-ear</artifactId>
    <packaging>ear</packaging>
    <version>7.26-SNAPSHOT</version>
    <name>itron-ear</name>
    <parent>
        <groupId>com.akuacom.drms.ear</groupId>
        <artifactId>ear-parent</artifactId>
        <version>7.26-SNAPSHOT</version>
    </parent>
    <dependencies>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>wss4j</groupId>
            <artifactId>wss4j</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>xml-security</groupId>
            <artifactId>xmlsec</artifactId>
            <version>1.3.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.akuacom.drms.ws-client</groupId>
            <artifactId>itron-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.akuacom.drms.itron</groupId>
            <artifactId>itron-ejb</artifactId>
            <type>ejb</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <!-- configuring the ear plugin -->
                <configuration>
                    <defaultJavaBundleDir>/lib</defaultJavaBundleDir>
                    <includeLibInApplicationXml>true</includeLibInApplicationXml>
                    <earName>itron</earName>
                    <jboss>
                        <version>5</version>
                        <!-- who put this here? -->
                        <loader-repository>com.akuacom:archive=unique-archive-name</loader-repository>
                        <module-order>strict</module-order>
                    </jboss>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                    <modules>
                        <ejbModule>
                            <groupId>com.akuacom.drms.itron</groupId>
                            <artifactId>itron-ejb</artifactId>
                        </ejbModule>
                        <jarModule>
                            <groupId>commons-lang</groupId>
                            <artifactId>commons-lang</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>com.akuacom.common</groupId>
                            <artifactId>util</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>com.akuacom.common</groupId>
                            <artifactId>util-ejb</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>org.jboss.logging</groupId>
                            <artifactId>jboss-logging-log4j</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>org.jboss.logging</groupId>
                            <artifactId>jboss-logging-spi</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>org.scala-lang</groupId>
                            <artifactId>scala-library</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>org.aspectj</groupId>
                            <artifactId>aspectjrt</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>com.akuacom.accmgr</groupId>
                            <artifactId>wsclient</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>com.akuacom.accmgr</groupId>
                            <artifactId>wsstubs</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>sshtools</groupId>
                            <artifactId>j2ssh-core</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>com.akuacom.drms.core</groupId>
                            <artifactId>drms-core</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-logging</groupId>
                            <artifactId>commons-logging</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>com.akuacom.drms.lib</groupId>
                            <artifactId>drms-util</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-beanutils</groupId>
                            <artifactId>commons-beanutils</artifactId>
                            <excluded>true</excluded>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>org.richfaces.framework</groupId>
                            <artifactId>richfaces-api</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>org.richfaces.framework</groupId>
                            <artifactId>richfaces-impl</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-digester</groupId>
                            <artifactId>commons-digester</artifactId>
                            <excluded>true</excluded>
                        </jarModule>						
                        <jarModule>
                            <groupId>org.richfaces.ui</groupId>
                            <artifactId>richfaces-ui</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>com.akuacom.drms.lib</groupId>
                            <artifactId>jsf-lib</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-collections</groupId>
                            <artifactId>commons-collections</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>