			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>pre-integration-test</phase>
								<configuration>
									<target>
										<property name="drmsVersion" value="${project.version}" />
										<property name="basedir" value="." />
										<ant antfile="build.xml">
											<target name="configure:install" />
										</ant>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
