<?xml version="1.0" encoding="UTF-8"?>

<!-- This data source is for JMS message store-->

<datasources>
  <local-tx-datasource>
		<jndi-name>mysql-jms-ds</jndi-name>
		<connection-url>jdbc:mysql://@HOST@:@PORT@/@NAME@</connection-url>
		<driver-class>com.mysql.jdbc.Driver</driver-class>
		<user-name>@USERNAME@</user-name>
		<password>@PASSWORD@</password>
		
		<exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLExceptionSorter</exception-sorter-class-name>
		
		<!-- this is requested by JMS connectionFactory to be integrated via JCA-->
		<transaction-isolation>TRANSACTION_READ_COMMITTED</transaction-isolation>
		
		 <!--pooling parameters-->
	    <min-pool-size>50</min-pool-size>
	    <max-pool-size>1500</max-pool-size>
		
		<!-- corresponding type-mapping in the standardjbosscmp-jdbc.xml (optional) -->
		<metadata>
        <type-mapping>mySQL</type-mapping>
		</metadata>
  </local-tx-datasource>
</datasources>

