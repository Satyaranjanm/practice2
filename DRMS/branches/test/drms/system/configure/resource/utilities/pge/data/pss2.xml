    <changeSet id="1" author="brian">
        <comment>DRMS-4452 TEST</comment>
    </changeSet>

    <changeSet id="2" author="brian">
        <update tableName="core_property">
            <column name="stringValue" value="pge" />
            <where>propertyName='utilityName'</where>
        </update>
    </changeSet>

    <changeSet id="3" author="brian">
        <update tableName="core_property">
            <column name="stringValue" value="PGE" />
            <where>propertyName='utilityDisplayName'</where>
        </update>
    </changeSet>
    <changeSet id="4" author="brian">
        <update tableName="core_property">
            <column name="stringValue" value="http://www.pge.com/" />
            <where>propertyName='contactURLLink'</where>
        </update>
    </changeSet>
    <changeSet id="5" author="brian">
        <update tableName="core_property">
            <column name="stringValue" value="ops@akuacom.com" />
            <where>propertyName='contactEMail'</where>
        </update>
    </changeSet>
    <changeSet id="6" author="brian">
        <update tableName="core_property">
            <column name="stringValue" value="ops@akuacom.com" />
            <where>propertyName='operatorEMails'</where>
        </update>
    </changeSet>
    <changeSet id="7" author="brian">
        <update tableName="core_property">
            <column name="stringValue" value="false" />
            <where>propertyName='feature.news'</where>
        </update>
    </changeSet>
    <changeSet id="8" author="brian">
        <update tableName="core_property">
            <column name="booleanValue" valueBoolean="true" />
            <where>propertyName='feature.peakchoice'</where>
        </update>
    </changeSet>
    <changeSet id="9" author="brian">
        <update tableName="program">
            <column name="autoAccept" valueBoolean="true" />
            <where>name like 'Peak%'</where>
        </update>
    </changeSet>
    <changeSet id="10" author="brian">
        <sql>
        update bid_config b, program p set b.defaultBidKW = 10, minBidKW = 10 where b.program_uuid = p.uuid and p.name like 'peak%';
        </sql>
    </changeSet>
    <changeSet id="11" author="nicole">
        <update tableName="core_property">
            <column name="booleanValue" valueBoolean="false" />
            <where>propertyName='feature.peakchoice'</where>
        </update>
    </changeSet>

</databaseChangeLog>
